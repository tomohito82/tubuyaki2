<%= form_for(@tweeet, url: choose_new_or_edit) do |f| %>
　<% if @tweeet.errors.any? %>
    <div id="error_explanation">
      <h2><%= @tweeet.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @tweeet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit %>
<% end %>

<%= link_to "ツイート一覧", tweeets_path %>